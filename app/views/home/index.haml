= render "devise/shared/header"

.my_container
	%h1= t "page_title.user_home"

	%h3
		= t "home.welcome"
		- if @user.photo.nil?
			=image_tag "no-image.png", :class => "photo"
		- else
			=image_tag get_photo_user_path(current_user.id), :class => "photo"		
		%strong
			%em= current_user.name
		= t "home.san"

	.home
		%table
			%tr
				%td= button_to t("home.author_info"), home_index_path(@user.id)
				%td= button_to t("home.add_univ"), home_index_path(@user.id)

			%tr
				%td= button_to t("home.new_article"), home_index_path(@user.id)
				%td= button_to t("home.list_article"), home_index_path(@user.id)