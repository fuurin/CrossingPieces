= render "devise/shared/header"

.my_container
  %h2=t "page_title.user_sign_up"
  
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    %table
      %tr
        %th= f.label :email
        %td= f.email_field :email, autofocus: true

      %tr
        %th
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length}
              = f.label :minimum_password_length
              )
        %td= f.password_field :password, autocomplete: "off"

      %tr
        %th= f.label :password_confirmation
        %td= f.password_field :password_confirmation, autocomplete: "off"

    .actions= f.submit 
      
  = render "devise/shared/links"
