%header
	= link_to image_tag("logo.png", class: "logo"), root_path

	-if user_signed_in?
		= button_to t("authentication.sign_out"), destroy_user_session_path, :method => :delete, :class => "sign_out_btn"
		%span.is_login
			= t "authentication.is_login"
			= current_user.name
			= t "home.san"